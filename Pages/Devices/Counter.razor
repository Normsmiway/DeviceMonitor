<div class="col-sm-6 col-md-6 col-lg-3">
    <div class="iq-card iq-card-block iq-card-stretch iq-card-height @CssClass">
        <div class="iq-card-body iq-box-relative">
            <div class="iq-service d-flex align-items-center justify-content-between">
                <div class="service-data">
                    <h2>@Percentage%</h2>
                    <p class="mb-2">@Text</p>
                </div>
                <div id="service-chart-01" class="service-chart"><h4 class="text-white">@Count of @TotalCount</h4></div>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public int TotalCount { get; set; }
    [Parameter]
    public int Count { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public decimal Percentage { get; set; }
    [Parameter]
    public string CssClass { get; set; }
}
